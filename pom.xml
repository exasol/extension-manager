<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.exasol</groupId>
    <artifactId>extension-manager-parent-pom</artifactId>
    <version>${revision}</version>
    <name>Extension Manager Parent POM</name>
    <description>Integration test framework for Extensions</description>
    <packaging>pom</packaging>
    <url>https://github.com/exasol/extension-manager/</url>
    <properties>
        <revision>0.5.5</revision>
        <junit.version>5.10.1</junit.version>
    </properties>
    <modules>
        <module>extension-manager-integration-test-java</module>
        <module>extension-manager-client-java</module>
    </modules>
    <distributionManagement>
        <!-- This is required to fix error during deployment: "Failed to execute goal
        org.apache.maven.plugins:maven-deploy-plugin:2.7:deploy (default-deploy) on project
        extension-manager-parent-pom: Deployment failed: repository element was not specified in the
        POM inside distributionManagement element or in -DaltDeploymentRepository=id::layout::url
        parameter" -->
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.sonatype.ossindex.maven</groupId>
                <artifactId>ossindex-maven-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <excludeVulnerabilityIds>
                        <!-- Transitive dependency fr.turri:aXMLRPC used by com.exasol:bucketfs-java.
                        CVE-2020-36641 is reported to be fixed in aXMLRPC 1.12.1. We use version 1.13.0, so this is a false
                        positive. -->
                        <exclude>CVE-2020-36641</exclude>
                        <!-- Transitive dependency io.netty:netty-handler used by software.amazon.awssdk/exasol-test-setup-abstraction-java.
                        Vulnerability still present in latest version 4.1.97.Final.
                        We assume that the AWS SDK's usage of netty is not affected. -->
                        <exclude>CVE-2023-4586</exclude>
                    </excludeVulnerabilityIds>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <id>enforce-maven</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireMavenVersion>
                                    <version>[3.8.7,3.9.0)</version>
                                </requireMavenVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
